<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhzx.server.repository.AuthorityMapper">
    <!-- 根据主键查询 -->
    <select id="selectById" parameterType="java.io.Serializable" resultMap="com.zhzx.server.repository.base.AuthorityBaseMapper.ResultMap">
        select * from sys_authority where id = #{id}
    </select>
    <!-- 根据Wrapper查询 -->
    <select id="selectOne" resultMap="com.zhzx.server.repository.base.AuthorityBaseMapper.ResultMap">
        select * from sys_authority ${ew.customSqlSegment} LIMIT 1
    </select>

    <select id="selectAuthoritiesByUserId" resultType="com.zhzx.server.vo.AuthorityVo">
		select distinct a.* from sys_authority a ,sys_role_authority b ,sys_user_role c ,sys_role d
		where c.user_id =#{userId}
		and c.role_id = d.id
		and d.id = b.role_id
		and b.authority_id = a.id
		order by a.sort_order;
    </select>
</mapper>
