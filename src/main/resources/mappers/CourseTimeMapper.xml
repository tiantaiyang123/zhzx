<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhzx.server.repository.CourseTimeMapper">
    <!-- 根据主键查询 -->
    <select id="selectById" parameterType="java.io.Serializable" resultMap="com.zhzx.server.repository.base.CourseTimeBaseMapper.ResultMap">
        select * from sys_course_time where id = #{id}
    </select>
    <!-- 根据Wrapper查询 -->
    <select id="selectOne" resultMap="com.zhzx.server.repository.base.CourseTimeBaseMapper.ResultMap">
        select * from sys_course_time ${ew.customSqlSegment} LIMIT 1
    </select>
    <select id="getNightDutyTime" resultType="java.lang.String">
        select concat_ws('-', start_time, end_time) from sys_course_time
        <where>
            <if test="entity != null and entity.size() > 0">
                and grade_id in
                <foreach collection="entity" item="item" separator="," open="(" close=")">#{item}</foreach>
            </if>
            and sort_order in (11, 12)
        </where>
        order by grade_id, sort_order
    </select>
</mapper>
