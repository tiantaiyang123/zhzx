<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhzx.server.repository.base.StudentRemarkBaseMapper">
    <resultMap id="BaseResultMap" type="com.zhzx.server.domain.StudentRemark">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="student_id" jdbcType="BIGINT" property="studentId" />
        <result column="teacher_id" jdbcType="BIGINT" property="teacherId" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <resultMap id="ResultMap" type="com.zhzx.server.domain.StudentRemark" extends="BaseResultMap">
        <result column="remark" jdbcType="VARCHAR" property="remark" />
    </resultMap>
    <sql id="Base_Column_List">
        id, student_id, teacher_id, create_time, update_time
    </sql>
    <sql id="Base_Column_List_With_Prefix">
        t.id, t.student_id, t.teacher_id, t.create_time, t.update_time
    </sql>
    <sql id="Base_Column_List_Full_With_Prefix">
        t.id, t.student_id, t.teacher_id, t.remark, t.create_time, t.update_time
    </sql>
    <insert id="batchInsert">
        insert into dat_student_remark (
            student_id, teacher_id, remark
        )
        values
        <foreach collection="records" item="record" separator=",">
        (
            #{record.studentId, jdbcType=BIGINT}, #{record.teacherId, jdbcType=BIGINT}, #{record.remark, jdbcType=VARCHAR}
        )
        </foreach>
    </insert>
    <update id="updateAllFieldsById" parameterType="com.zhzx.server.domain.StudentRemark">
        update dat_student_remark set
        <trim suffixOverrides=",">
            student_id = #{et.studentId, jdbcType=BIGINT},
            teacher_id = #{et.teacherId, jdbcType=BIGINT},
            remark = #{et.remark, jdbcType=VARCHAR},
        </trim>
        where id = #{et.id}
    </update>
</mapper>
