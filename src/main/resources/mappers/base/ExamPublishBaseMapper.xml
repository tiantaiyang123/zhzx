<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhzx.server.repository.base.ExamPublishBaseMapper">
    <resultMap id="BaseResultMap" type="com.zhzx.server.domain.ExamPublish">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="grade_id" jdbcType="BIGINT" property="gradeId" />
        <result column="publish_time" jdbcType="TIMESTAMP" property="publishTime" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="editor" jdbcType="VARCHAR" property="editor" />
        <result column="is_publish" jdbcType="VARCHAR" property="isPublish" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <resultMap id="ResultMap" type="com.zhzx.server.domain.ExamPublish" extends="BaseResultMap">
        <association column="grade_id" property="grade" javaType="com.zhzx.server.domain.Grade"
                     select="com.zhzx.server.repository.GradeMapper.selectById" />
        <collection column="id" property="examPublishRelationList" select="queryExamPublishRelationById" />
    </resultMap>
    <sql id="Base_Column_List">
        id, grade_id, publish_time, remark, editor, is_publish, create_time, update_time
    </sql>
    <sql id="Base_Column_List_With_Prefix">
        t.id, t.grade_id, t.publish_time, t.remark, t.editor, t.is_publish, t.create_time, t.update_time
    </sql>
    <select id="queryExamPublishRelationById" resultMap="com.zhzx.server.repository.base.ExamPublishRelationBaseMapper.ResultMap">
        select
        <include refid="com.zhzx.server.repository.base.ExamPublishRelationBaseMapper.Base_Column_List" />
        from dat_exam_publish_relation
        where exam_publish_id = #{id}
    </select>
    <insert id="batchInsert">
        insert into dat_exam_publish (
            grade_id, publish_time, remark, editor
        )
        values
        <foreach collection="records" item="record" separator=",">
        (
            #{record.gradeId, jdbcType=BIGINT}, #{record.publishTime, jdbcType=TIMESTAMP}, #{record.remark, jdbcType=VARCHAR}, #{record.editor, jdbcType=VARCHAR}
        )
        </foreach>
    </insert>
    <update id="updateAllFieldsById" parameterType="com.zhzx.server.domain.ExamPublish">
        update dat_exam_publish set
        <trim suffixOverrides=",">
            grade_id = #{et.gradeId, jdbcType=BIGINT},
            publish_time = #{et.publishTime, jdbcType=TIMESTAMP},
            remark = #{et.remark, jdbcType=VARCHAR},
            editor = #{et.editor, jdbcType=VARCHAR},
        </trim>
        where id = #{et.id}
    </update>
</mapper>
