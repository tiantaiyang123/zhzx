<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhzx.server.repository.base.SchoolyardBaseMapper">
    <resultMap id="BaseResultMap" type="com.zhzx.server.domain.Schoolyard">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="faculty" jdbcType="VARCHAR" property="faculty" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <resultMap id="ResultMap" type="com.zhzx.server.domain.Schoolyard" extends="BaseResultMap">
    </resultMap>
    <sql id="Base_Column_List">
        id, name, faculty, create_time, update_time
    </sql>
    <sql id="Base_Column_List_With_Prefix">
        t.id, t.name, t.faculty, t.create_time, t.update_time
    </sql>
    <insert id="batchInsert">
        insert into sys_schoolyard (
            name, faculty
        )
        values
        <foreach collection="records" item="record" separator=",">
        (
            #{record.name, jdbcType=VARCHAR}, #{record.faculty, jdbcType=VARCHAR}
        )
        </foreach>
    </insert>
    <update id="updateAllFieldsById" parameterType="com.zhzx.server.domain.Schoolyard">
        update sys_schoolyard set
        <trim suffixOverrides=",">
            name = #{et.name, jdbcType=VARCHAR},
            faculty = #{et.faculty, jdbcType=VARCHAR},
        </trim>
        where id = #{et.id}
    </update>
</mapper>
