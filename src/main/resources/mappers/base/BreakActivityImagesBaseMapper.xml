        values
        <foreach collection="records" item="record" separator=",">
        (
            #{record.breakActivityId, jdbcType=BIGINT}, #{record.url, jdbcType=VARCHAR}
        )
        </foreach>
    </insert>
    <update id="updateAllFieldsById" parameterType="com.zhzx.server.domain.BreakActivityImages">
        update day_break_activity_images set
        <trim suffixOverrides=",">
            break_activity_id = #{et.breakActivityId, jdbcType=BIGINT},
            url = #{et.url, jdbcType=VARCHAR},
        </trim>
        where id = #{et.id}
    </update>
</mapper>
